<h5>Terms</h5>

<ul class="list-group pb-3">
    <li class="list-group-item">
        <span><%= "You have #{@terms.count} terms in total" %></span>
    </li>
</ul>

<%= form_tag terms_path, method: :get do %>
	<div class="input-group mb-3">
		<%= text_field_tag :search_term, params[:search_term] %>
		<div class="input-group-append">
			<%= submit_tag 'search', class: "input-group-text", id: "basic-addon2" %>
		</div>
	</div>
<% end %>

<table class="table small">
	<thead class="thead-dark">
		<tr>
			<th scope="col">term</th>
			<th scope="col">Meaning</th>
			<th scope="col">Results</th>
		</tr>
	</thead>
	<tbody>
		<% @terms.each do |term| %>
			<tr>
				<td>
					<% article = term.article.present? ? "#{term.article} " : ""%>
					<%= link_to "#{article}#{term.base}", url_for([:edit, term]) %>
				</td>
				<td><%= term.meaning %></td>
				<td><%= term.attempts.correct.count %>/<%= term.attempts.count %></td>
			</tr>
		<% end %>
	</tbody>
</table>
