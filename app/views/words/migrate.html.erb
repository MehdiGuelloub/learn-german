<%= form_for @term, builder: MyFormBuilder do |f| %>
  <%= hidden_field_tag :word_id, @word.id %>
  <%= f.select :type, options_for_select(['Verb', 'Noun', 'Adjective'], params[:type]), { include_blank: true }, required: true, onchange: 'window.location.href = window.location.href + "?type=" + this.value' %>
  <%= f.select :article, options_for_select(Noun.articles.map { |key, value| [key, key] }, @word.article), { include_blank: true }, required: true  if params[:type] == "Noun" %>
  <%= f.text_field :base, value: @word.word, required: true %>
  <%= f.text_field :plural, required: true if params[:type] == "Noun" %>
  <%= f.text_field :perfect, required: true if params[:type] == "Verb" %>
  <%= f.text_field :praeteritum, required: true if params[:type] == "Verb" %>
  <%= f.text_field :comparative, required: true if params[:type] == "Adjective" %>
  <%= f.text_field :superlative, required: true if params[:type] == "Adjective" %>
  <%= f.text_field :meaning, value: @word.meaning, required: true %>
  <%= f.submit class: 'btn btn-info' %>
<% end %>
