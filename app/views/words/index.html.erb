<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Word</th>
            <th scope="col">Meaning</th>
            <th scope="col">Mistakes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @words.each do |word| %>
        <tr>
            <% article = word.article_none? ? "" : "#{word.read_attribute("article")} "%>
            <td><%= "#{article}#{word.word}" %></td>
            <td><%= word.meaning %></td>
            <% mistakes_rate = word.mistakes.to_f/word.attempts.to_f * 100 %>
            <td class="<%= mistakes_rate > 10 ? "text-danger" : "text-success" %>">
                <strong>
                    <%= word.attempts > 0 ? number_to_percentage(mistakes_rate, precision: 0) : 0 %>
                </strong>
            </td>
            <td>
                <%= button_to word_path(word), method: :delete, class: 'btn btn-danger' do %>
                    <span aria-hidden="true">&times;</span>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
