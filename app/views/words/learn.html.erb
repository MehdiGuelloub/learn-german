<%= form_tag verify_word_path(@word), method: :get do %>
    <%= hidden_field_tag :translation, params[:translation] %>

    <div class='form-group'>
        <%= label_tag :word %>
        <%= text_field_tag :word, @translation == :de_en ? @word.word : '', class: 'form-control', required: true %>
        <% if @word.notes.present? %>
            <a class="form-text text-muted" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                <small>Show notes</small> 
            </a>
            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    <%= @word.notes %>
                </div>
            </div>
        <% end %>
    </div>

    <div class='form-group'>
        <%= label_tag :meaning %>
        <%= text_field_tag :meaning, @translation == :en_de ? @word.meaning : '', class: 'form-control', required: true %>
        <small id="notoverbs" class="form-text text-muted">You don't need to prefix verbs with "to" </small> 
    </div>
    <%= submit_tag 'Verify', class: 'btn btn-info' %>
<% end %>

<div class="position-absolute fixed-bottom">
    <%= select_tag :translation, options_for_select([['random', nil], ['learn EN', :de_en], ['learn DE', :en_de]], params[:translation]), {:onchange => "window.location.assign(`learn?translation=${this.value}`)" } %>
</div>