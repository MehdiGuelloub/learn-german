<%= form_tag verify_partizip_verb_path(@verb) do %>

  <div class="form-group row">
    <%= label_tag nil, "Verb", class: "col-sm-4 col-form-label"%>
    <div class="col-sm-8">
      <div class="form-control">
        <%= @verb.base %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <%= label_tag :perfect, nil, class: "col-sm-4 col-form-label"%>
    <div class="col-sm-8">
      <%= text_field_tag :perfect, nil, required: true, class: "form-control", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= label_tag :praeteritum, nil, class: "col-sm-4 col-form-label"%>
    <div class="col-sm-8">
      <%= text_field_tag :praeteritum, nil, required: true, class: "form-control" %>
    </div>
  </div>

  <%= submit_tag 'Verify', class: 'btn btn-info' %>
<% end %>
