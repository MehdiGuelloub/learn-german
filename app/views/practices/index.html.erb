<h3 class="pb-5">Attempts/day history:</h1>

<ul class="list-group pb-3">
    <% @practices.each do |practice| %>
        <li class="list-group-item">
            <strong><%= "#{practice.date}: " %></strong>
            <span><%= "#{practice.number_of_practiced_words_per_day} word(s) practiced" %></span>
            <span class="text-danger"><%= "#{practice.number_of_mistakes_per_day} mistake(s)" %></span>
        </li>
    <% end %>
</ul>